# Smart NOTAM 환경 설정 파일
# 실제 운영에서는 이 파일을 .gitignore에 추가하고 실제 값으로 변경하세요

# Flask 설정
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-change-this-in-production

# Google Gemini API 설정 (주 번역 엔진)
GOOGLE_API_KEY=your-google-gemini-api-key-here

# OpenAI API 설정 (선택사항 - fallback)
OPENAI_API_KEY=your-openai-api-key-here

# Google Maps API 설정
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# 파일 업로드 설정
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads

# 로깅 설정
LOG_LEVEL=INFO
LOG_FILE=logs/smartnotam.log

# 데이터베이스 설정 (향후 확장용)
# DATABASE_URL=sqlite:///smartnotam.db

# AI 번역 설정
USE_AI_TRANSLATION=False
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.3

# NOTAM 필터링 설정
KOREAN_AIRPORTS=RKSI,RKSS,RKPC,RKPK,RKTU,RKNY,RKJJ
AIRLINE_KEYWORDS=KAL,KOREAN AIR,ASIANA

# 캐시 설정 (향후 확장용)
# CACHE_TYPE=simple
# CACHE_DEFAULT_TIMEOUT=300

# 보안 설정
SESSION_COOKIE_SECURE=False  # 운영에서는 True로 변경
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax